<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_cart"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorAccent"
        android:theme="@style/ToolbarThemeGreen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Bill"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/sf_pro_display_regular"/>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/seekbar"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_cart"
        android:layout_marginVertical="4dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_seek"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bg_circle_off"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bg_circle_on"
            android:layout_centerInParent="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bg_circle_off"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/seekbar"
        android:layout_below="@id/toolbar_cart"
        android:padding="16dp">

        <TextView
            android:id="@+id/billto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill to"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/sf_pro_display_regular"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/et_bill_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:inputType="text"
            android:hint="Name"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_below="@id/billto"
            android:background="@drawable/bg_edittext_dark"
            android:fontFamily="@font/sf_pro_display_medium"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/et_bill_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:inputType="text"
            android:hint="Username"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_below="@id/et_bill_name"
            android:background="@drawable/bg_edittext_dark"
            android:fontFamily="@font/sf_pro_display_medium"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/et_bill_address"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp"
            android:inputType="textMultiLine"
            android:hint="Address"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_below="@id/et_bill_username"
            android:background="@drawable/bg_edittext_dark"
            android:fontFamily="@font/sf_pro_display_medium"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/et_bill_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:inputType="text"
            android:hint="City"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_below="@id/et_bill_address"
            android:background="@drawable/bg_edittext_dark"
            android:fontFamily="@font/sf_pro_display_medium"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/et_bill_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:inputType="phone"
            android:layout_below="@id/et_bill_city"
            android:background="@drawable/bg_edittext_dark"
            android:fontFamily="@font/sf_pro_display_medium"
            android:paddingHorizontal="64dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:hint="+62"
            android:layout_below="@id/et_bill_city"
            android:gravity="center"
            android:background="@drawable/bg_edittext_dark"
            android:fontFamily="@font/sf_pro_display_medium"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/sf_pro_display_regular"
            android:background="@drawable/bg_btn"
            android:textAllCaps="false"/>

    </RelativeLayout>

</RelativeLayout>