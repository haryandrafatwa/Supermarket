<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_register"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/white"
        android:theme="@style/ToolbarTheme">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Feature.Register.RegisterActivity"
        android:layout_below="@id/toolbar_register"
        android:layout_marginTop="32dp">
        <EditText
            android:id="@+id/et_nama_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:hint="Username"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorInputText"
            android:textSize="14sp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_username"
            android:background="@drawable/bg_edittext"/>

        <EditText
            android:id="@+id/et_email_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_nama_register"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorInputText"
            android:textSize="14sp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_email"
            android:background="@drawable/bg_edittext"/>

        <EditText
            android:id="@+id/et_nomorhp_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_email_register"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:hint="Nomor HP"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorInputText"
            android:textSize="14sp"
            android:inputType="phone"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_phone"
            android:background="@drawable/bg_edittext"/>

        <EditText
            android:id="@+id/et_pass_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_nomorhp_register"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:inputType="textPassword"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:drawableEnd="@drawable/ic_visibility_off"
            android:textColor="@color/colorInputText"
            android:hint="Password"
            android:textSize="14sp"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/ic_lock"
            android:background="@drawable/bg_edittext"/>

        <Button
            android:id="@+id/btn_daftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_pass_register"
            android:text="Daftar"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_btn"
            android:layout_marginTop="32dp"
            android:padding="10dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_daftar">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah punya akun Supermarket?" />

            <TextView
                android:id="@+id/tv_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MASUK"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:layout_toRightOf="@id/tv2"
                android:layout_marginStart="4dp"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>