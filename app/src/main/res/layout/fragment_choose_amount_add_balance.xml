<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add_balance"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorAccent"
        android:theme="@style/ToolbarThemeGreen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MarketPay"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/sf_pro_display_regular"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/choose_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Amount"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/sf_pro_display_regular"
        android:layout_below="@id/toolbar_add_balance"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_add_balance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/choose_amount"
        android:layout_above="@+id/rl_enter_amount">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/amount5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/bg_btn_solid_white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_amount5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$5"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:paddingLeft="8dp"
                        android:paddingVertical="2dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/amount10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_below="@id/amount5"
                android:background="@drawable/bg_btn_solid_white">

                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_amount10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$10"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:paddingLeft="8dp"
                        android:paddingVertical="2dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/amount25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_below="@id/amount10"
                android:background="@drawable/bg_btn_solid_white">

                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_amount25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$25"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:paddingLeft="8dp"
                        android:paddingVertical="2dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/amount50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_below="@id/amount25"
                android:background="@drawable/bg_btn_solid_white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_amount50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$50"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:paddingLeft="8dp"
                        android:paddingVertical="2dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/amount75"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_below="@id/amount50"
                android:background="@drawable/bg_btn_solid_white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_amount75"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$75"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:paddingLeft="8dp"
                        android:paddingVertical="2dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/amount100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_below="@id/amount75"
                android:background="@drawable/bg_btn_solid_white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_amount100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$100"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:paddingLeft="8dp"
                        android:paddingVertical="2dp"/>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/rl_enter_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_add_balance_white_atas"
        android:padding="16dp">

        <TextView
            android:id="@+id/enter_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Amount"
        android:textColor="@android:color/black"
        android:fontFamily="@font/sf_pro_display_regular"/>

        <EditText
            android:id="@+id/et_enter_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:paddingLeft="8dp"
            android:hint="$5"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:background="@drawable/bg_edittext"
            android:layout_below="@id/enter_amount"
            android:fontFamily="@font/sf_pro_display_regular"/>

        <Button
            android:id="@+id/et_add_balance_proceed_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/et_enter_amount"
            android:text="Proceed"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/sf_pro_display_regular"
            android:background="@drawable/bg_btn"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:textAllCaps="true"/>

    </RelativeLayout>

</RelativeLayout>