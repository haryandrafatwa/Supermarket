<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    android:id="@+id/main_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".LoginActivity"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tv_trashure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingEnd="10dp"
                android:layout_below="@id/iv_logo"
                android:text="Supermarket"
                android:textAlignment="textStart"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/et_email_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_trashure"
                android:layout_marginTop="54dp"
                android:padding="10dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorInputText"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_email"
                android:drawableTint="@color/colorAccent"
                android:background="@drawable/bg_edittext"/>

            <EditText
                android:id="@+id/et_pass_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_email_login"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/ic_visibility_off"
                android:textColor="@color/colorInputText"
                android:hint="Password"
                android:textSize="14sp"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_lock"
                android:background="@drawable/bg_edittext"/>

            <Button
                android:id="@+id/btn_masuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pass_login"
                android:text="Masuk"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_btn"
                android:layout_marginTop="40dp"
                android:padding="10dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btn_masuk">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="belum punya akun?" />

                <TextView
                    android:id="@+id/tv_daftar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DAFTAR"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/tv2"
                    android:layout_marginStart="4dp"/>

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>